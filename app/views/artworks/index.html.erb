<div class="container">
  <h1 class="text-center my-4"><%= @title %>s</h1>

    <div class="cards">
      <% @artworks.each do |artwork| %>
        <div class="d-flex flex-column">
          <div class="card-category">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path artwork.photos[0].key %>')">
              <%= link_to "BUY", buy_artwork_path(artwork), method: :post  %>
            </div>
          </div>
          <div class="p-2 my-3"><h3><%= artwork.title %></h3></div>
          <div class="p-2"><p><strong>Price:</strong> $<%= artwork.price %></p></div>
        </div>
      <% end %>
    </div>
</div>
