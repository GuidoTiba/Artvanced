<div class="title-head">
    <h1 class="text-center my-4"><strong>My Artworks</strong></h1>
</div>

<div class="container">
    <div class="cards my-5">
      <% @artworks.each do |artwork| %>
        <div class="d-flex flex-column mb-4">
          <div class="card-category">
            <%= button_to artwork_path(artwork), id: :btn_image, method: :get do %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path artwork.photos[0].key %>')">
                <p id="on_sale_flag"><%= artwork.on_sale ? "On sale" : "Not on sale" %></p>
                <%= link_to artwork.on_sale ? "Remove from sale" : "Put on sale",  artwork_toggle_sale_path(artwork), id: :btn_sell, method: :patch %>
              </div>
            <% end %>
          </div>
          <div class="mt-3 d-flex justify-content-between align-items-center">
            <%= link_to artwork_path(artwork), class: :btn_link do %>
              <h5 class="mb-0"><%= artwork.title %></h5>
            <% end %>
            <p class="mb-0">
              <strong>Price:</strong> <i class="fab fa-btc"></i> <%= artwork.price %>
              <%= link_to edit_artwork_path(artwork), id:"icon_link" do %>
                <i class="fas fa-pencil-alt" id="edit_price"></i>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
</div>
