<div class="container">

  <div class="artwork-cover my-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @artwork.photos[0].key %>')"></div>

  <div class="">
    <div>

      <div class="d-flex my-4">
        <div><h1>Details</h1></div>
        <div class="ml-auto p-2"><%= link_to "Buy now", new_artwork_purchase_path(@artwork), class: [:btn_buy, "px-5"] %></div>
      </div>

      <h2><%= @artwork.title %></h2>
      
      

      <div class="mt-3 d-flex justify-content-between align-items-center">
        <h4>Technique: <em><%= @artwork.technique %> </em></h4>
        <h4>Price: <i class="fab fa-btc"></i> <%= @artwork.price %></h4>
      </div>

    </div>

  </div>

</div>
