<div class="container">
  <div class="d-flex my-4">
    <div><h2></h2></div>
    <div class="ml-auto p-2"><%= link_to " ↩︎ Back", artworks_path(@artworks,:technique => @artwork.technique ), id: :btn_back %></div>
  </div>

  <div class="artwork-cover my-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @artwork.photos[0].key %>')"></div>

  <div>
    <div>

      <div class="d-flex my-4">
        <div><h2>Details of the artwork</h2></div>
        <div class="ml-auto p-3 btn btn-beige">
          <% if @artwork.owner == current_user %>
            <p class="mb-0">Owned by you!</p>
          <% else %>
            <%= link_to "Buy now", new_artwork_purchase_path(@artwork) %>
          <% end %>
        </div>
      </div>

      <p class="py-1"><strong>Title: </strong><%= @artwork.title %></p>
      <p class="py-1"><strong>Technique: </strong><%= @artwork.technique %></p>
      <p class="py-1"><strong>Price: </strong><%= @artwork.price %> <i class="fab fa-btc"></i></p>

    </div>
  </div>

</div>
